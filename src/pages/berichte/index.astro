---
import "../../styles/global.scss";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import ArticleHeader from "../../components/ArticleHeader.astro";

const posts = await getCollection("berichte");

// Sort newest first
const sortedPosts = posts.sort(
    (a, b) => b.data.datum.valueOf() - a.data.datum.valueOf(),
);

// Group by year
const postsByYear = sortedPosts.reduce<
    Record<number, CollectionEntry<"berichte">[]>
>((acc, post) => {
    const year = post.data.datum.getFullYear();

    if (!acc[year]) acc[year] = [];
    acc[year].push(post);

    return acc;
}, {});
---

<!doctype html>
<html lang="de">
    <head>
        <meta charset="UTF-8" />
    </head>
    <body>
        <ArticleHeader />
        <section class="berichte-list max-w-3xl mx-auto py-16 px-6">
            <h2 class="text-3xl font-bold mb-6">Berichte</h2>

            {
                Object.entries(postsByYear)
                    .sort(([yearA], [yearB]) => Number(yearB) - Number(yearA))
                    .map(([year, yearPosts]) => (
                        <details class="group mb-6">
                            <summary
                                class="
                                cursor-pointer list-none
                                p-2
                                flex items-center justify-between
                                "
                            >
                                <h2 class="text-2xl font-semibold">{year}</h2>

                                <svg
                                    class="w-5 h-5 transition-transform group-open:rotate-180"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M19 9l-7 7-7-7"
                                    />
                                </svg>
                            </summary>

                            <ul
                                class="
                                        mt-2 w-full
                                        bg-white border border-gray-200 shadow-lg
                                        hidden
                                        group-open:block
                                    "
                            >
                                {yearPosts.map((post) => (
                                    <li class="h-auto hover:bg-white transition-all px-4 py-2 hover:bg-gray-100 cursor-pointer">
                                        <a href={`/berichte/${post.slug}`}>
                                            <div class="h-full w-full p-4 flex flex-col sm:flex-row">
                                                <time class="text-gray-500 sm:w-[100px] sm:pr-5">
                                                    {post.data.datum.toLocaleDateString(
                                                        "de-DE",
                                                    )}
                                                </time>
                                                <div class="sm:ml-5 mt-1 sm:mt-0 flex w-full items-center justify-between">
                                                    <h3 class="flex-1">
                                                        {post.data.titel}
                                                    </h3>
                                                    <svg
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        fill="none"
                                                        viewBox="0 0 24 24"
                                                        stroke-width="1.5"
                                                        stroke="currentColor"
                                                        class="size-6 hidden sm:block"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            d="m5.25 4.5 7.5 7.5-7.5 7.5m6-15 7.5 7.5-7.5 7.5"
                                                        />
                                                    </svg>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                ))}
                            </ul>
                        </details>
                    ))
            }
        </section>
    </body>
</html>

<style>
    .berichte-list h3 {
        font-weight: bold !important;
    }

    .berichte-list li {
        background-color: var(--color-light-blue);
        border: 1px white solid;
    }

    .berichte-list li:hover {
        background-color: white;
        border: 1px var(--color-light-blue) solid;
    }

    .berichte-list time {
        border-right: 2px var(--color-brown) solid;
    }

    .berichte-list .mehr-link {
        font-size: 1.5em;
    }

    .berichte-list summary {
        background-color: var(--color-grey-blue);
        color: var(--color-light-blue);
    }

    @media (max-width: 676px) {
        .berichte-list time {
            border: none;
        }
    }
</style>
